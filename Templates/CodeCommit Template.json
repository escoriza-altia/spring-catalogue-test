{
    "AWSTemplateFormatVersion" : "2010-09-09",

    "Description" : "Template Creates new repository for docker image",
    "Parameters": {
      "ccRepositoryName": {
          "Type": "String",
          "Description": "Implements the new code commit repository name",
          "Default": "ccRepositorySpring"
      }
    },
    "Resources" : {
      "NewRepo": {
        "Type" : "AWS::CodeCommit::Repository",
        "Properties" : {
            "RepositoryDescription" : "Repository for all database-system code",
            "RepositoryName" : {
                "Ref": "ccRepositoryName"
            }
          }
      }

    }
  }