{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Template Creates postgreSQL database",
    "Parameters": {
        "DBNameP": {
            "Type": "String",
            "Description": "Implements the new DB name"
        },
        "MUser": {
            "Type": "String",
            "Description": "Master Username"
        },
        "MPass": {
            "Type": "String",
            "Description": "Master Password"
        }
    },
    "Resources" : {
        "TestProgre": {
            "Type": "AWS::RDS::DBInstance",
            "Properties": {
                "DBName": {
                    "Ref": "DBNameP"
                },
                "MasterUsername": {
                    "Ref": "MUser"
                },
                "MasterUserPassword": {
                    "Ref": "MPass"
                },
                "Engine": "postgres",
                "DBSubnetGroupName": "postgresqlmicro",
                "DBInstanceClass": "db.m5.large",
                "StorageType": "gp2",
                "AllocatedStorage": "20",
                "PubliclyAccessible": false,
                "DBInstanceIdentifier": {
                    "Fn::Join": [
                        "",
                        [
                            "MyDBInstance-eu-west-1"
                        ]
                    ]
                },
                "AvailabilityZone": "eu-west-1a",
                "VPCSecurityGroups": [
                    "sg-025c880d7fa486270"
                ]
            }
        }
    }
}